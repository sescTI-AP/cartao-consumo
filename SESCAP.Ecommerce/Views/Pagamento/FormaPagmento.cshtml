@{
    Layout = "_Layout";
    ViewData["Title"] = "Forma de Pagamento";

}

<div class="top-navbar">

    <div class="xd-topbar">
        <div class="row">

            <div class="col-2 col-md-1 col-lg-1 order-2 order-md-1 align-self-center">
                <h4 class="page-title">@ViewData["Title"]</h4>
                <div class="xp-menubar">
                    <span class="material-icons-sharp">menu_open</span>
                </div>
            </div>

            <div class="col-10 col-md-6 col-lg-8 order-1 order-md-3">
                <div class="xp-profilebar text-right">
                    <nav class="navbar p-0">
                        <ul class="nav navbar-nav flex-row ml-auto">

                            <li class="dropdown nav-item">
                                <a class="nav-link" href="#" data-bs-toggle="dropdown">
                                    <img src="@ViewBag.CartaoImg" style="width: 60px; border-radius: 50%; height:60px; object-fit: cover; " />
                                    <span class="xp-user-live"></span>
                                </a>
                                <ul class="dropdown-menu small-menu">
                                    <li>
                                        <a asp-controller="Home" asp-action="Logout">
                                            <span class="material-icons-sharp">logout</span>
                                            Sair
                                        </a>
                                    </li>
                                </ul>
                            </li>

                        </ul>
                    </nav>
                </div>
            </div>

        </div>
    </div>

</div>

<div class="container_forma_pagamento">

    <div class="title_forma_pagamento">
        <h4>Selecione uma forma de <span style="color:#1F3864; font-weight: 600;">Pagamento</span></h4>
    </div>

    <div class="categoria_pagamento">
        <a asp-controller="Pagamento" asp-action="Recarga" class="forma_pagamento">
            <div class="imgName">
                <div class="imgContainer">
                    <img class="imgPagamento" src="~/imagens/cartao.png" alt="cartaoDeCredito" />
                </div>
                <span class="nome_pagamento">CRÉDITO</span>
            </div>
        </a>

        <a asp-controller="Pagamento" asp-action="RecargaPix" class="forma_pagamento">
            <div class="imgName">
                <div class="imgContainer">
                    <img class="imgPagamento" src="~/imagens/pix.png" alt="Pix" />
                </div>
                <span class="nome_pagamento">PIX</span>
            </div>
        </a>

    </div>

</div>